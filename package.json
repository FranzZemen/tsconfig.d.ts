{
  "name": "tsconfig.d.ts",
  "description": "A tsconfig definition and an opinionated default generator",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "windows": "npm config set script-shell H:\\Git\\bin\\bash.exe",
    "clean": "cd ./util && npx tsc && cd .. && npx clean",
    "build": "npx tsc -build",
    "rebuild": "echo \"start clean\" && npx clean util && echo \"clean complete, start build\" && npx tsc -build && echo \"build complete\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "publish": "cp ./package.publish.json ./transient/publish/package.json && cd ./transient && npm publish ./publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FranzZemen/tsconfig.d.ts.git"
  },
