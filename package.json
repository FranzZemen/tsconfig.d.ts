    "url": "https://github.com/FranzZemen/tsconfig.d.ts/issues"
  },
  "homepage": "https://github.com/FranzZemen/tsconfig.d.ts#readme",
  "dependencies": {
    "clean": "file:clean",
    "pkg": "file:pkg",
    "typescript": "^4.9.3",
    "util": "file:util"
  },
  "devDependencies": {
    "@types/node": "^18.11.10"
  }
}
